{% if pagination.next or pagination.prev %}
  <div class="pagination">
    {% if pagination.prev %}
      <a href="{{ pagination.prev.link|e('esc_url') }}" class="button-previous" aria-label="{{ __('Previous', 'flynt') }}"></a>
    {% endif %}
      <div class="current">{{pagination.current}}/{{pagination.total}}</div>
    {% if pagination.next %}
      <a href="{{ pagination.next.link|e('esc_url') }}" class="button-next" aria-label="{{ __('Next', 'flynt') }}"></a>
    {% endif %}
  </div>
{% endif %}
